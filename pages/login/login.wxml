<!--pages/login/login.wxml-->
<view class="container">
  <view class="wechatapp">
    <!-- <image class="header" src="/images/wechatapp.png"></image> -->
    <view class="header">
      <open-data class="" type="userAvatarUrl"></open-data>
    </view>
  </view>
  <view class="auth-title">申请获取以下权限</view>
  <view class="auth-subtitle">获得你的公开信息（昵称、头像等）</view>
  <view class="auth-subtitle">体验完整功能请授权登录</view>
  <button class="login-btn" openType="getUserInfo" lang="zh_CN" bindgetuserinfo="authorLogin">授权登录</button>

  <view >
    <button class="login-btn" style="margin-top:40rpx;background:#ddd;" bindtap="cancal">取消</button>
  </view>
</view>