/* pages/recruit/publishJob/publishJob.wxss */
.scanCode {
  position: relative;
  left: 50%;
  transform: translateX(-50%);
  width:240rpx;
height:72rpx;
line-height: 72rpx;
font-size: 32rpx;
  color: #fff;
background:rgba(74,73,246,1);
box-shadow:0px 6px 8px -5px rgba(74,73,246,0.5);
  text-align: center;
  z-index: 99;
  border-radius:8px;
}
picker{
  width: 100%;
}
.form-wrap{
  background: #fff;
  width: 686rpx;
  border-radius: 16rpx;
  margin: 32rpx;
  padding: 40rpx;
  box-sizing: border-box;
  padding-bottom: 100rpx;

}
.item-wrap{
  display: flex;
  align-items: flex-start;
  justify-content: space-between;
  margin-bottom: 40rpx;
  /* height: 60rpx; */
  line-height: 60rpx;
}
.item-key{
  flex: 0 0 6em;
}
.item-value{
  flex: 1;
  display: flex;
  align-items: center;
  justify-content: space-between;
  position: relative;
}
.item-value image{
  width: 14rpx;
  height: 26rpx;
  position: absolute;
  right: 10rpx;
  top: 50%;
  transform: translateY(-50%);
}

.item-value .item-input{
  width: 100%;
  box-sizing: border-box;
  border-bottom: 2rpx solid #aaa;
  height: 60rpx;
  line-height: 60rpx;
  text-align: right;
}

radio {
  transform:scale(0.8);
  border-radius: 50%;

}
/*checkbox选中后样式  */
checkbox .wx-checkbox-input.wx-checkbox-input-checked {
  background: #b91048;
}
.radio-group{
  width: 100%;
  display: flex;
  align-items: center;
  flex-wrap: wrap;
  justify-content: flex-end;
}
.radio{
  flex: 0 0 240rpx;
  font-size: 28rpx;
  text-align: right
}
.salary-input{
  text-align: left;
  border: 2rpx solid #aaa;
  border-radius: 8rpx;
  margin: 0rpx 8rpx;
  padding: 0rpx 8rpx;
min-height: 60rpx;
  line-height: 60rpx;
  box-sizing: border-box;
}
.item-value textarea,.job-name{
  width: 100%;
  text-align: right;
  border: 2rpx solid #aaa;
  border-radius: 8rpx;
  padding: 0rpx 16rpx;
min-height: 60rpx;
  line-height: 60rpx;
  box-sizing: border-box;
}
.item-value textarea{
  text-align: left;
}
.confirm-btns{
  max-width: 670rpx;
  margin: 40rpx auto;
  display: flex;
  align-items: center;
  justify-content: space-around;

}
.confirm-btns view{
  font-size: 28rpx;
  flex: 0 0 40%;
  line-height: 80rpx;
  height: 80rpx;
   box-shadow:0px 12rpx 32rpx 0px rgba(0,0,0,0.08);
}
.pop{
  position: fixed;
  box-sizing: border-box;
  width: 750rpx;
  padding: 40rpx 60rpx;
  left: 0rpx;
  right: 0rpx;
  bottom: 0rpx;
  z-index: 999;
  background: #fff;
  border-radius: 40rpx 40rpx 0rpx 0rpx;
}
.pop-title{
  font-size: 36rpx;
  text-align: center;
  max-width: 10em;
  margin: 0rpx auto 30rpx auto;
}
.mask{
   position: fixed;
  top: 0rpx;
  left: 0rpx;
  right: 0rpx;
  bottom: 0rpx;
  background: rgba(0,0,0,0.48);
  z-index: 2;
  
}

.success-pop {
  width: 300rpx;
  background-color: #fff;
  border-radius: 16rpx;
  position: fixed;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  padding: 40rpx;
  z-index: 907;
  text-align: center;
}

.success-pop image {
  width: 120rpx;
  height: 120rpx;
}

.success-pop-tit {
  font-size: 28rpx;
  color: #323232;
  font-weight: bold;
  margin: 20rpx auto;
}

.success-pop-tip {
  font-size: 24rpx;
  color: #ababab;
}
.pop-items{
  display: flex;
  align-items: flex-end;
  justify-content: space-between;
  flex-wrap: wrap;
}
.pop-item{
    flex: 0 0 6em;
    height: 60rpx;
    line-height: 60rpx;
    border: 2rpx solid #aaa;
    background: #fff;
    text-align: center;
    margin-bottom: 20rpx;
    box-sizing: border-box;
}
.pop-item-s{
  margin-bottom: 20rpx;
    flex: 0 0 6em;
    height: 60rpx;
    line-height: 60rpx;
    /* border: 2rpx solid #aaa; */
    color: #fff;
    background: linear-gradient(153deg, rgba(143, 59, 66, 1) 0%, rgba(83, 19, 27, 1) 100%);
    text-align: center;
    box-sizing: border-box;
}