.list {
  margin: 20rpx auto;
  width: 686rpx;
  margin-bottom: 32rpx;
}

.list-content {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-top: 16rpx;
}

.list-img {
  width: 686rpx;
  height: 260rpx;
  border-radius: 8px;
  margin-right: 24rpx;
}

.list-title {
  flex: 1;

  font-weight: 600;
  color: rgba(15, 30, 62, 1);
  font-size: 28rpx;
}


.list-time {
  font-size: 26rpx;
  font-weight: 400;
  color: rgba(15, 30, 62, 0.25);
}

/* 搜索样式 */
.search {
  padding: 32rpx;
  box-sizing: border-box;
  display: flex;
  align-items: center;
  justify-content: space-around;
  overflow: hidden;
}

.b_center_search {
  flex: 1;
  height: 56rpx;
  background: rgba(255, 255, 255, 1);
  box-shadow: 0px 6px 17px -3px rgba(41, 41, 157, 0.07);
  border-radius: 10px;
  display: flex;
  align-items: center
}

.p_search_img {
  width: 32rpx;
  height: 32rpx;
  flex: 0 0 32rpx;
  margin: 0 26rpx;
}

.p_search_input {
  font-size: 28rpx;
  color: #070731;
}