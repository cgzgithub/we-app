/* pages/auth/auth.wxss */
.selectBg{
  width: 750rpx;
  height: 100%;
  position: fixed;
  top: 0;
  left: 0;
  z-index: -1;
}
.logo{
  width: 750rpx;
  height: 513rpx;
}
.mobileLogin{
  width:630rpx;
  height:88rpx;
  background:#008BEF;
  border-radius:2px;
  text-align: center;
  line-height: 88rpx;
  color:#fff;
  margin: 80rpx auto 0;
  position: relative;
}
.pa30{
  padding: 0 60rpx;
}
.auth_bottom{
  width: 624rpx;
  height: 280rpx;
  position: fixed;
  right: 0;
  bottom: 0;
  z-index: -1;
}
.auth_Btn{
  position: absolute;
  left: 0;
  top: 0;
  width: 100%;
  height: 100%;
  z-index: 9;
  opacity: 0;
}
.tabCheck{
  margin-top: 30rpx;
  text-align: center;
}
.border{
  width: 100%;
  height: 1px;
  background:#DDDDDD;
}
.tabItem{
  padding-bottom: 20rpx;
  border-bottom: 3px solid #fff;
  display: inline-block;
  margin: 0 auto;
}
.active{
  font-weight: bold;
  border-bottom: 3px solid #008BEF;
}
.userLogin{
  margin-top:80rpx;
}
.inpItem{
  width: 630rpx;
  height: 80rpx;
  line-height: 80rpx;
  background:rgba(255,255,255,1);
  margin:0 auto;
  border-radius: 4px;
  box-sizing: border-box;
  border-bottom: 1rpx solid #efefef;
  padding: 0 20rpx;
}
.login{
  width:630rpx;
  height:88rpx;
  background:#008BEF;
  border-radius:2px;
  margin:30rpx auto 0;
  text-align: center;
  line-height: 88rpx;
  color:#fff;
}